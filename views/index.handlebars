<h2>Demo App</h2>

<!-- form to send stuff -->
<div id="app">

	<form>

		<div class="form-group">
			<label for="custName">Customer Name</label>
			<input type="text" class="form-control" id="custName" v-model="customerName">
		</div>

		<div class="form-group">
			<label for="leadValue">Lead Value</label>
			<input type="text" class="form-control" id="leadValue" v-model="leadValue">
		</div>

		<button type="submit" class="btn btn-primary" @click.prevent="saveLead">Save</button>

	</form>

	<p>
		<b>Result:</b> 
	\{{ result }} 
	</p>
	
</div>

<!-- extend editor -->
<h2>Extension</h2>
<div id="extend-editor" style="height: 600px; width: 100%"></div>
<script>
ExtendEditor.create(document.getElementById('extend-editor'), {
	hostUrl:'{{host}}',
	webtaskContainer: '{{container}}',
	token: '{{token}}',
	webtaskName: 'saveLead',
	createIfNotExists: true 
});
</script>

<script src="https://unpkg.com/vue"></script>
<script src="js/app.js"></script>
